extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal.w3-center
            h1
                b Author Info

    .w3-container
        ul.w3-ul.w3-card-4(style="width:50%")
            li
                b Author Id: 
                span #{Autor[0].author}
            li
                b Author Name: 
                span #{Autor[0].author}
    .w3-container
        header.w3-container.w3-blue
            h1
                span List of Books
        
        table.w3-table-all
            tr
                th Id
                th Title
                th Publish Date
                th Pages
                - var totalLivros = 0
            each livro in Autor
                tr
                    td
                        a(href="/" + livro._id)= livro._id
                    td= livro.title
                    td= livro.publishDate
                    td= livro.pages
                    - totalLivros += 1
        p Total of Books: #{totalLivros}

    .w3-cell.w3-container.w3-margin-bottom
        a.w3-button.w3-teal(href="/")
            b Back to Book List
        
    footer.w3-container.w3-blue
        h5 Generated by Rafael Gomes