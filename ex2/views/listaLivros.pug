extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal.w3-center
            h1
                b Book List

        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Title
                    th Author
                    th Publish Date
                    th N. of Pages
                each livro in lLivros
                    tr
                        td
                            a(href="/" + livro._id)= livro._id
                        td= livro.title
                        td
                            a(href="/authors/" + livro.author)= livro.author
                        td= livro.publishDate
                        td= livro.pages
    footer.w3-container.w3-blue
        h5 Generated by Rafael Gomes